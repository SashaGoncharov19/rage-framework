{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES6"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "outDir": "bin",
    "esModuleInterop": true,

    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
  },
  "include": [
    "src/**/*",
    "./types.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}